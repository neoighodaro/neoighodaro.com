{
	"require": {
        "mouf/nodejs-installer": "~1.0"
    },
    "extra": {
        "mouf": {
            "nodejs": {
            	"version": "4.2.1"
            }
        }
    },
    "scripts": {
	    "post-install-cmd": [
	    	"vendor/bin/node -v && vendor/bin/npm -v",
	    	"ln -s /vendor/bin/node /usr/bin/node",
	    	"vendor/bin/npm install bower",
	    	"vendor/bin/npm install",
	    	"node_modules/.bin/bower install",
	    	"node_modules/.bin/gulp production --production"
	    ]
	}
}